{% extends 'base.html.twig' %}

{% block title %}Category{% endblock %}

{% block body %}
<h3>{{ category.name }}</h3>
    

    
           
               
                
  

    <a href="{{ path('app_category_index') }}">back to list</a>
    <h1>Articles :</h1> <br> <br>
<div>
<table class="table " style="background-color:white;">
        <thead>
            <tr>
               
                <th>Title</th>
                <th>Content</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for article in articles %}
            <tr>
              
                <td>{{ article.title }}</td>
                <td>{{ article.content }}</td>
                <td>
                    <a class="btn btn-success" href="{{ path('app_article_show', {'id': article.id}) }}">show</a>
                    
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="4">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
</div>
    
{% endblock %}
