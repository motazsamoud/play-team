<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.text.Font?>


<AnchorPane id="AnchorPane" prefHeight="607.0" prefWidth="788.0" xmlns:fx="http://javafx.com/fxml/1" xmlns="http://javafx.com/javafx/19" fx:controller="gui.ConsulterUserController">
   <children>
      <HBox prefHeight="59.0" prefWidth="788.0">
         <children>
            <Button fx:id="btn1" onAction= "#Creer" mnemonicParsing="false" prefHeight="64.0" prefWidth="138.0" text="Ajouter User">
               <font>
                  <Font size="18.0" />
               </font>
            </Button>
            <Button fx:id="btndelete" onAction= "#Supprimer" mnemonicParsing="false"  prefHeight="59.0" prefWidth="180.0" text="Supprimer User">
               <font>
                  <Font size="18.0" />
               </font>
            </Button>
            <Button fx:id="btnupdate" mnemonicParsing="false" prefHeight="59.0" onAction= "#Modifier" prefWidth="180.0" text="Modifier User">
               <font>
                  <Font size="18.0" />
               </font>
            </Button>
            <TextField prefHeight="59.0" prefWidth="290.0" promptText="Rechercher....">
               <font>
                  <Font size="27.0" />
               </font>
            </TextField>
         </children>
      </HBox>
      <TableView fx:id="table"  layoutY="58.0" prefHeight="548.0" prefWidth="796.0">
        <columns>
          <TableColumn fx:id="id" prefWidth="75.0" text="ID" />
          <TableColumn fx:id="first" prefWidth="150.0" text="First_Name" />
            <TableColumn fx:id="last"  minWidth="0.0" prefWidth="75.0" text="Last_Name" />
            <TableColumn fx:id="email" minWidth="0.0" prefWidth="200.0" text="Email" />
            <TableColumn fx:id="phone" minWidth="0.0" prefWidth="157.0" text="Phone" />
       </columns>
         <columnResizePolicy>
            <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
         </columnResizePolicy>
      </TableView>
   </children>
</AnchorPane>
